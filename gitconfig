[include]
	path = ~/.gitconfig.local
[apply]
	whitespace = fix
[core]
        excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	whitespace = fix,space-before-tab,tab-in-indent,trailing-space
	autocrlf = false
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[merge]
	log = true
        tool = vimdiff3
[mergetool]
        path = nvim
[grep]
	lineNumber = true
